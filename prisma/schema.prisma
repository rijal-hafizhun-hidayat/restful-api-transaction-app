generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model m_barang {
  id         Int      @id @default(autoincrement())
  kode       String   @unique @db.VarChar()
  nama       String   @db.VarChar()
  harga      Int      @db.Integer
  created_at DateTime @default(now()) @db.Timestamp()
  updated_at DateTime @updatedAt @db.Timestamp()
}

model m_costumer {
  id         Int      @id @default(autoincrement())
  kode       String   @unique @db.VarChar()
  nama       String   @db.VarChar()
  telp       String   @db.VarChar()
  created_at DateTime @default(now()) @db.Timestamp()
  updated_at DateTime @updatedAt @db.Timestamp()
  t_sales    t_sales?
}

model t_sales {
  id          Int      @id @default(autoincrement())
  kode        String   @unique @db.VarChar()
  tgl         DateTime @db.Timestamp()
  costumer_id Int      @unique @db.Integer
  subtotal    Int      @db.Integer
  diskon      Int      @db.Integer
  ongkir      Int      @db.Integer
  total_bayar Int      @db.Integer
  created_at  DateTime @default(now()) @db.Timestamp()
  updated_at  DateTime @updatedAt @db.Timestamp()

  costumer m_costumer @relation(fields: [costumer_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
}
